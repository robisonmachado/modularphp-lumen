{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,

    "noImplicitAny": false,
    "pretty": true,
    "removeComments": true,
    "allowJs": false,
    "noImplicitReturns": true,

    "lib": [
        //"esnext",
        "dom",
        "dom.iterable",
        "scripthost",
        "es5",
        "es2015.promise"
    ]

  },

  "include": [
      "resources/js/**/*",
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.vue",
    ],
    "files": [
        "vue-shims.d.ts"
      ],
  "exclude": [
    "node_modules"
  ]
}
